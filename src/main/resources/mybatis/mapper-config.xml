<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
   "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<settings>
		<!-- Mybatis는 쿼리문에 매핑되는 파라미터에 Null 값이 있으면 에러 처리 -->
		<!-- Null 값이 있더라도 에러 처리하지 않고 그대로 Null을 저장하도록 하는 코드 -->
		<setting name="jdbcTypeForNull" value="NULL" />
		
		<!-- Java에서 Camel 표기법으로 작성된 이름을 인식하고 매핑할 수 있도록 설정 -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>
	
	<typeAliases>
		<typeAlias alias="BerryHistory" type="com.mycompany.let_ffle.dto.BerryHistory" />
		<typeAlias alias="Board" type="com.mycompany.let_ffle.dto.Board" />
		<typeAlias alias="BoardComment" type="com.mycompany.let_ffle.dto.BoardComment" />
		<typeAlias alias="Inquiry" type="com.mycompany.let_ffle.dto.Inquiry" />
		<typeAlias alias="LikeList" type="com.mycompany.let_ffle.dto.LikeList" />
		<typeAlias alias="Member" type="com.mycompany.let_ffle.dto.Member" />
		<typeAlias alias="Notice" type="com.mycompany.let_ffle.dto.Notice" />
		<typeAlias alias="QuizMission" type="com.mycompany.let_ffle.dto.QuizMission" />
		<typeAlias alias="Raffle" type="com.mycompany.let_ffle.dto.Raffle" />
		<typeAlias alias="RaffleDetail" type="com.mycompany.let_ffle.dto.RaffleDetail" />
		<typeAlias alias="RaffleImage" type="com.mycompany.let_ffle.dto.RaffleImage" />
		<typeAlias alias="TimeMission" type="com.mycompany.let_ffle.dto.TimeMission" />
		<typeAlias alias="Winner" type="com.mycompany.let_ffle.dto.Winner" />
		<typeAlias alias="Pager" type="com.mycompany.let_ffle.dto.Pager" />
		<typeAlias alias="RaffleRequest" type="com.mycompany.let_ffle.dto.request.RaffleRequest"/>
		<typeAlias alias="RaffleDetailRequest" type="com.mycompany.let_ffle.dto.request.RaffleDetailRequest"/>
	</typeAliases>
	
</configuration>