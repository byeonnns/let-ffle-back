<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.mycompany.let_ffle.dao.WinnerDao">

	<insert id="insertWinner" parameterType="Winner">
		insert into winner
		values (#{rno}, #{mid})
	</insert>
	
	<select id="selectWinnerDetail" parameterType="int" resultType="Winner">
		select *
		from winner
		where rno = #{rno}
	</select>
	
	<select id="selectWinnerDetailList" parameterType="String" resultType="Raffle">
		select r.rno "rno", r.rtitle "rtitle", r.rgift "rgift", r.rfinishedat "rfinishedat", w.wreceiveraddress "rcontent"
		from raffle r INNER JOIN winner w ON r.rno = w.rno
		where w.mid = #{mid}
	</select>

</mapper>    